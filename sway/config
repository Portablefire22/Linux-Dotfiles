
### Mouse

# No mouse accel
input type:pointer {
  accel_profile flat
  pointer_accel 0
}

### Keyboard ### 

input * {
  xkb_layout "gb"
}

input type:keyboard xkb_numlock enabled

set $mod Mod4

### Bar ###

bar {
  swaybar_command waybar
}

### Display ### 

output HDMI-A-1 mode 1920x1080@60Hz pos 2560 360 bg ~/Pictures/06RU005T1-full.webp stretch
output DP-3 mode 2560x1440@144Hz pos 0 0 bg ~/Pictures/06RU005T1-full.webp stretch

### Audio Controls ### 

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop

### Execs ### 

# Clipboard 
exec wl-paste -t text --watch clipman store --no-persist 
exec sov

# Sway Overview 
exec rm -f /tmp/sovpipe && mkfifo /tmp/sovpipe && tail -f /tmp/sovpipe | sov -t 500


### Keybinds 
# Open Firefox
bindsym --no-repeat $mod+w exec firefox
# Close current window
bindsym --no-repeat $mod+q kill
# Refresh Sway 
bindsym --no-repeat $mod+shift+r exec swaymsg reload
# Lockscreen 
bindsym --no-repeat $mod+l exec swaylock --clock \
                                --ignore-empty-password \
                                --indicator-caps-lock \
                                --indicator \
                                --show-failed-attempts 
# Terminal
bindsym --no-repeat $mod+t exec kitty
# File Explorer
bindsym --no-repeat $mod+e exec nautilus
